{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@sections/*": ["./src/sections/*"],
      "@assets/*": ["./src/assets/*"],
      "@data/*": ["./src/data/*"],
    },
  },
}
